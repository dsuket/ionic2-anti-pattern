fontFamily = "Avenir Next", Verdana, "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro", "游ゴシック", "Yu Gothic", "メイリオ", Meiryo, Osaka, sans-serif
monoFont = "SFMono-Regular", Consolas, "Liberation Mono", Menlo, Courier, monospace

html
  font-size 10px

body
  font-family fontFamily

h1
h2
h3
  margin-bottom 0
  font-weight 400

.remark-slide-content
  font-size 2.4rem
  font-feature-settings : "palt"

  h1
    font-size 4.8rem
    font-weight: 600
    margin-top: 2.8rem
  h2
    font-size 2.8rem
    font-weight: 600
    margin-top: 4.2rem
    border-bottom: solid 1px #eee
  h3
    font-size 2.4rem
    font-weight: 600
    margin-top: 2.4rem

  p
    line-height: 1.6

  blockquote
    font-size: 2.0rem
    margin: 2.0rem
    padding: 2.0rem
    background: #eee
    border-radius: 4px
    p
      margin: 0

  code
    &.remark-code
      padding: 1em .5em

  ul
   > li
    > ul
      font-size: 2.0rem

  .small
    font-size: 2.0rem

.footnote
  position absolute
  bottom 3em

.remark-slide-number
  position: fixed

li
  p
    line-height 1.25em

.large
  font-size 2em

a, a > code
  color #24dbb4
  //text-decoration none

code
  border-radius 5px
  background #e7e8e2

.remark-code
.remark-inline-code
  padding: 0 4px
  margin: 0 4px
  color: #333
  background: #eee
  border-radius: 3px
  font-family: monoFont
// .remark-code-line-highlighted
//   background-color #373832

.pull-left
  float left
  width 47%

.pull-right
  float right
  width 47%

.pull-right ~ p
  clear both

/* Two-column layout */

.left-column
  float left
  width 20%
  height 92%
  color #777

.left-column
  h2:last-of-type
  h3:last-child
    color #000

.right-column
  float right
  width 75%
  padding-top 1em

// 縦スクロールできるように
.remark-slide-scaler
  overflow: scroll

li
  padding 8px

.techfeed-log a
  background-color: #333
  padding: 12px 16px 4px
  display: inline-block
  img
    display: inline-block

#slide-title
  h1
    font-size: 6.4rem
    font-weight: 800

.pattern
  &:before
    content '❌️'
    font-size: 0.8em
    margin-right: 8px

.presented-by
  float: right;
  font-size: 90%;
  font-style: italic;
  color: #666;
  margin-right: -40px;
